/include/ "sama5d3.dtsi"

/ {
	memory {
		reg = <0x20000000 0x20000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};
	};

	ahb {
		apb {
			macb0: ethernet@f0028000 {
				phy-mode = "rgmii";
			};
		};

		nand0: nand@60000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "hw";
			atmel,has-pmecc;
			atmel,pmecc-cap = <4>;
			atmel,pmecc-sector-size = <512>;
			atmel,has-nfc;
			atmel,use-nfc-sram;
			nand-on-flash-bbt;
			status = "okay";
		};
	};

	leds {
		compatible = "gpio-leds";

		d2 {
			label = "d2";
			gpios = <&pioE 6 1>;	/* PE6, conflicts with A6 */
			linux,default-trigger = "heartbeat";
			status = "okay";
		};
		
		d3 {
			label = "d3";
			gpios = <&pioE 7 1>;	/* PE7, conflicts with A7 */
			linux,default-trigger = "heartbeat";
			status = "okay";
		};
		
		buzz {
			label = "buzz";
			gpios = <&pioE 29 1>;
			status = "okay";
		};
	};
};
